{
  "lib":{ "type": "lib" },
  "lib/*.ex":{
    "type": "lib",
    "alternate": "test/{}_test.exs",
    "template":[
      "defmodule {camelcase|dot} do",
      "",
      "end",
    ]
  },
  "test/*.exs":{
    "alternate": "lib/{}.ex",
    "template":[
      "defmodule {camelcase|dot} do",
      "  use ExUnit.Case",
      "",
      "end",
    ]
  },
  "test":{ "type":"test" },
  "test/*_test.exs":{
    "type": "test",
    "alternate": "lib/{}.ex",
    "template":[
      "defmodule {camelcase|dot}Test do",
      "  use ExUnit.Case#, async: true",
      "",
      "end",
    ]
  },

  "test/test_helper.exs":{
    "type":"helper",
  },

  "config/config.exs":{ "type": "config", },
  "config/*.exs":{
    "type": "config",
    "template":[
      "use Mix.Config",
    ]
  },

  "mix.exs":{ "type": "x", },

  "*.exs": { "console": "iex -S mix", },
  "*.ex": { "console": "iex -S mix", },

}
